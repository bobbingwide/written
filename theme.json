{
  "version": 1,
  "settings": {
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "border": {
      "customColor": true,
      "customRadius": true,
      "customStyle": true,
      "customWidth": true
    },
    "color": {
      "link": true,
      "gradient": false,
      "palette": [
        {
          "slug": "white",
          "color": "#fff",
          "name": "White"
        },
        {
          "slug": "blue",
          "color": "#0073AA",
          "name": "WordPress blue"
        },
        {
          "slug": "dark-grey",
          "color": "#23282D",
          "name": "Dark grey"
        }
      ]
    },
    "typography": {
      "customFontSize": true,
      "customFontStyle": true,
      "customFontWeight": true,
      "customLineHeight": false,
      "customTextDecorations": true,
      "customTextTransforms": true,
      "dropCap": false,
      "fontFamilies": [
        {
          "fontFamily": "trebuchet ms,Arial,Helvetica,Sans-Serif",
          "slug": "trebuchet"
        },
        {
          "fontFamily": "Lato,sans-serif",
          "slug": "lato"
        }
      ],
      "fontSizes": [
        {
          "slug": "normal",
          "size": "20px",
          "name": "normal 20px"
        },
        {
          "slug": "extra-small",
          "size": "16px",
          "name": "Extra small 16px"
        },
        {
          "slug": "large",
          "size": "24px",
          "name": "Large 24px"
        },
        {
          "slug": "title",
          "size": "41px",
          "name": "Title 41px"
        }
      ]
    },
    "spacing": {
      "customPadding": true,
      "customMargin": true,
      "units": [ "px", "em", "rem", "vh", "vw" ]
    }
  },
    "blocks": {
      "core/heading": {
        "color": {
          "palette": [
            {
              "slug": "white",
              "color": "#fff",
              "name": "White"
            },
            {
              "slug": "medium-blue",
              "color": "#00A0D2",
              "name": "Medium blue"
            }
          ]
        }
      },
      "core/site-title":{
        "typography": {
          "customFontSize": true
        }
      }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--white)"
    },
    "elements": {
      "h1": {
        "color": {
          "text": "var(--wp--preset--color--medium-blue)"
        },
        "typography": {
          "customFontSize": true
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--blue)"
        }
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--lato)",
      "lineHeight": 1.625
    },
    "blocks": {
      "core/paragraph": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--normal)"
        }
      },
      "core/post-terms": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--extra-small)"
        }
      },
      "core/post-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--large)"
        }
      },
      "core/site-title": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--trebuchet)",
          "fontSize": "var( --wp--preset--font-size--title)"
        }
      },
      "core/post-excerpt": {
        "elements": {
          "link": {
            "color": {
              "text": "var(--wp--preset--color--white)",
              "background": "var(--wp--preset--color--blue)"
            },
            "spacing": {
              "padding": {
                "top": "1em",
                "right": "1em",
                "bottom": "1em",
                "left": "1em"
              }
            }
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "area": "header"
    },
    {
      "name": "footer",
      "area": "footer"
    }
  ]
}