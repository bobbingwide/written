{
  "version": 1,
  "settings": {
    "layout": {
      "contentSize": "1200px",
      "wideSize": "1400px"
    },
    "border": {
      "customColor": true,
      "customRadius": true,
      "customStyle": true,
      "customWidth": true
    },
    "color": {
      "link": true,
      "gradient": false,
      "palette": [
        {
          "slug": "white",
          "color": "#fff",
          "name": "White"
        },
        {
          "slug": "blue",
          "color": "#0073AA",
          "name": "WordPress blue"
        },
        {
          "slug": "link",
          "color": "#5a5f21",
          "name": "Link colour "
        },
        {
          "slug": "dark-grey",
          "color": "#23282D",
          "name": "Dark grey"
        },
        {
          "slug": "footer-background",
          "color": "#d5e0c1",
          "name": "Footer background"
        },
        {
          "slug": "body-background",
          "color": "#f5f5f5",
          "name": "Body background"
        }
      ]
    },
    "typography": {
      "customFontSize": true,
      "customFontStyle": true,
      "customFontWeight": true,
      "customLineHeight": false,
      "customTextDecorations": true,
      "customTextTransforms": true,
      "dropCap": false,
      "fontFamilies": [
        {
          "fontFamily": "trebuchet ms,Arial,Helvetica,Sans-Serif",
          "slug": "trebuchet"
        },
        {
          "fontFamily": "Lato,sans-serif",
          "slug": "lato"
        }
      ],
      "fontSizes": [
        {
          "slug": "footer",
          "size": "14.4px",
          "name": "Footer 14.4px"

        },
        {
        "slug": "extra-small",
        "size": "16px",
        "name": "Extra small 16px"
        },
        {
          "slug": "normal",
          "size": "20px",
          "name": "H4 normal 20px"
        },
        {
          "slug": "large",
          "size": "24px",
          "name": "H3 Large 24px"
        },
        {
          "slug": "h1",
          "size": "36px",
          "name": "H1 36px"
        },
        {
          "slug": "title",
          "size": "41px",
          "name": "Title 41px"
        }
      ]
    },
    "spacing": {
      "customPadding": true,
      "customMargin": true,
      "units": [ "px", "em", "rem", "vh", "vw", "%" ]
    }
  },
    "blocks": {
      "core/heading": {
        "color": {
          "palette": [
            {
              "slug": "white",
              "color": "#fff",
              "name": "White"
            },
            {
              "slug": "v-dark-grey",
              "color": "#333333",
              "name": "V Dark Grey #333"
            }
          ]
        }
      },
      "core/site-title":{
        "typography": {
          "customFontSize": true
        }
      }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--body-background)"
    },
    "elements": {
      "h1": {
        "color": {
          "text": "var(--wp--preset--color--v-dark-grey)"
        },
        "typography": {
          "customFontSize": true,
          "fontSize": "var( --wp--preset--font-size--h1)",
          "fontWeight": "var( --wp--preset--font-weight--normal )"
        }
      },
      "h3": {
        "color": {
          "text": "var(--wp--preset--color--v-dark-grey)"
        },
        "typography": {
          "customFontSize": true,
          "fontSize": "var( --wp--preset--font-size--large)",
          "fontWeight": "var( --wp--preset--font-weight--normal )"
        }
      },
      "h4": {
        "color": {
          "text": "var(--wp--preset--color--v-dark-grey)"
        },
        "typography": {
          "customFontSize": true,
          "fontSize": "var( --wp-preset--font-size--normal)",
          "fontWeight": "var( --wp--preset--font-weight--normal )"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--link)"
        }
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--lato)",
      "lineHeight": 1.625
    },
    "blocks": {
      "core/paragraph": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--normal)"
        }
      },
      "core/post-terms": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--extra-small)"
        }
      },
      "core/post-title": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--title)"
        }
      },
      "core/site-title": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--trebuchet)",
          "fontSize": "var( --wp--preset--font-size--title)"
        }
      },
      "core/group": {
        "color": {
          "background": "#fff"
        },
        "spacing": {
          "padding": {
            "top": "20px",
            "right": "5px",
            "bottom": "20px",
            "left": "5px"
          }
        }
      },
      "core/heading": {
        "spacing": {
          "margin": {
            "top": "0px",
            "right": "0px",
            "bottom": "10px",
            "left": "0px"
          }
        }
      },
    "oik-bbw/wp": {
      "typography": {
        "fontSize": "var( --wp--preset--font-size--title)"
      }
    }
  }
  },
  "templateParts": [
    {
      "name": "header",
      "area": "header"
    },
    {
      "name": "footer",
      "area": "footer"
    }
  ]
}